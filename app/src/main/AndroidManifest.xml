<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mslxl.arkayo">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Arkayo">
        <activity
            android:name="com.mslxl.arkayo.ui.activity.TaskDetailActivity"
            android:exported="true"
            android:label="@string/title_activity_task_detail"
            android:theme="@style/Theme.Arkayo.NoActionBar" />
        <activity
            android:name="com.mslxl.arkayo.ui.activity.TaskListActivity"
            android:exported="true"
            android:label="@string/title_activity_task_list" />
        <activity
            android:name=".ui.activity.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".util.screencap.ScreenCaptureActivity"
            android:theme="@style/Translucent" />

        <service android:name=".service.TaskService" />
        <service
            android:name=".service.MediaForegroundService"
            android:foregroundServiceType="mediaProjection" />
        <service
            android:name=".service.AutomatorAccessibilityService"
            android:exported="true"
            android:label="@string/accessibility_service_label"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
    </application>

</manifest>